package hxflib.codeCrawler.events;

import hxf.core.events.EventDispatcher;
import hxflib.codeCrawler.registry.CodeRegistry;
import hxflib.codeCrawler.registry.ModulesRegistry;
import hxflib.codeCrawler.events.CodeTypes;

class CodeDispatcher extends EventDispatcher
{	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	private var modules 	 : ModulesRegistry;
	private var registry 	 : CodeRegistry;
	private var evtTypesCode : CodeTypes;
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new( sub : Dynamic, reg : CodeRegistry )
	{
		super( sub );
		
		modules		 = reg.modules;
		registry 	 = reg;		
		evtTypesCode = new CodeTypes();
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	override public function eventType() : CodeTypes
	{
		return evtTypesCode;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

