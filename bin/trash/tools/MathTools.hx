package hxf.core.tools;

import haxe.macro.Expr;

class MathTools 
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////

	public function new(){}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	private static var currentUniqueId : String;
	private static var currentAddition : Int = 0;
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public static function getUniqueId() : String
	{
		var id : String = Std.string( Std.int( Date.now().getTime() ));
		
		if( id.substr( 0, 1 ) == "-" ){
			id = id.substr( 1 );
		}
		
		if( id == currentUniqueId ){
			currentAddition++;
		}
		else {
			currentUniqueId = id;
			currentAddition = 0;
		}
		
		return id + Std.string( currentAddition );
	}
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

