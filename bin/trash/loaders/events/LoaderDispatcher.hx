package hxf.core.loaders.events;

import hxf.core.loaders.events.LoaderData;
import hxf.core.loaders.events.LoaderTypes;
import hxf.core.events.EventDispatcher;

class LoaderDispatcher extends EventDispatcher
{	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	private var evtTypesLoader : LoaderTypes;
	private var evtDataLoader  : LoaderData;
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new( sub : Dynamic )
	{
		super( sub );
		
		evtTypesLoader = new LoaderTypes();
		evtDataLoader  = new LoaderData();
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	override public function eventType() : LoaderTypes
	{
		return evtTypesLoader;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	override public function eventData() : LoaderData
	{
		return evtDataLoader;
	}
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

