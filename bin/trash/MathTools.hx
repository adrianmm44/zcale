package zcale.macros;

extern class MathTools 
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////

	public static inline function isEven( int : Int ) : Bool
	{
		return ( int % 2 == 0 );
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public static inline function isOdd( int : Int ) : Bool
	{
		return ( int % 2 == 1 );
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

