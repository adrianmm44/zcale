package hxf.text.registry;

class TabsRegistry
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public var allowTabs 	  : Bool = true;	
	public var tabDepth  	  : Int	 = 0;	
	public var tabDepthMargin : Int	 = 0;
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new(){}
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function toString() : String
	{
		var tabs : String = "";
		var tabLength : Int = tabDepth + tabDepthMargin;
		
		for( i in 0...tabLength )
		{ 
			tabs += "\t"; 
		}
		
		return tabs;
	}
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

