package hxf.core.registry.targets;

import haxe.Unserializer;
import hxf.core.native.js.Window;
import hxf.core.registry.RegistryBase;

class JsRegistry extends RegistryBase
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////

	public function new( sub : Dynamic )
	{
		super( sub );
		
		target.directory = "js/";
		target.extension = ".js";
		
		if( Window.objectvars != null ){
			objectvars = Unserializer.run( Window.objectvars );
		}
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

