package hxf.core.registry.location;

import hxf.core.Path;
import hxf.core.Registry;
import hxf.core.tools.PathTools;

class LocationBase 
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public var rootUrl 		: String;
	public var rootPath 	: String;
	public var relativePath : String;
	public var params 		: Map<String,String>;
	
	private var registry 	: Registry;	
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new( reg : Registry )
	{
		registry = reg;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
		
	private function updatePaths() : Void
	{
		rootUrl 	 = Path.getRootUrl();
		rootPath	 = Path.getRootPath();
		relativePath = Path.getRelativePath();
		params 	     = Path.getParams();
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function getParamsString() : String
	{
		return PathTools.paramsToString( params );
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

