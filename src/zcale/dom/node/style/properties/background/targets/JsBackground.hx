package hxf.core.dom.element.style.properties.background.targets;

import hxf.core.dom.element.targets.JsElement;

class JsBackground
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
		
	public var color( default, set ) : String;
	
	private var element : JsElement;
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new( element : JsElement )
	{
		this.element = element;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	private function set_color( value : String ) : String
	{
		element.getTarget().style.backgroundColor = value;
								
		return color = value;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

