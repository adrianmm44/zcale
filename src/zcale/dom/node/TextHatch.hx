package zcale.dom.node;

import zcale.dom.node.TextNode;
import zcale.dom.node.interfaces.IElderNode;

class TextHatch
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public var useIndenting : Bool = true;
	
	private var ids  : Array<Int>;
	private var self : IElderNode;
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new( ids : Array<Int>, self : IElderNode )
	{
		this.ids  = ids;
		this.self = self;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function add( str : String ) : Void
	{
		var text = new TextNode( ids, str );
		text.parent = self;
		text.useIndenting = useIndenting;
		self.addChild( text );
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

