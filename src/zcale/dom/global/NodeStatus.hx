package zcale.dom.global;

class NodeStatus
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public var indent : Int = 0;
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new(){}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function getIndent() : String
	{
		var tabs = "";		
		for( i in 0...indent ){ 
			tabs += "\t";
		}
		return tabs;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

