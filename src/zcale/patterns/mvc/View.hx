package zcale.mvc;

import zcale.Dom;
import zcale.mvc.global.MvcData;

class View
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	private var ids : Array<Int>;
	private var mvc : MvcData;
	private var dom : Dom;
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new( ids : Array<Int> )
	{
		this.ids = ids;
		this.mvc = MvcData.getInstanceById( ids );
		this.dom = mvc.dom;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function render() : Void
	{
		dom.render();
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

