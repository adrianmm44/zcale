package zcale.mvc.global;

import zcale.Dom;
import zcale.core.Boot;
import zcale.core.Path;
import zcale.core.patterns.IMultiton;

class MvcData implements IMultiton
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public var dom 		: Dom;
	public var pathData : String;
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	private function new( ids : Array<Int> )
	{
		dom 	 = new Dom( ids );
		pathData = Path.relativePath;
		
		Boot.getInstance().printHtml = false;
		Boot.getInstance().tracer = dom;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

