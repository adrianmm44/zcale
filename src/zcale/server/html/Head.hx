package zcale.server.html;

import zcale.settings.CoreSettings;

class Head 
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public var title  : String;
	
	private var style : String = "";
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new( ?title : String )
	{
		this.title = title;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function addStyle( str : String ) : Head
	{
		style += "\n\t\t" + str;
		return this;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function toString() : String
	{
		var html = "\n" + '<head>';		
		
		if( title != null ){
			html += "\n\t" + '<title>' + title + '</title>' + "\n";
		}		
		html += "\n\t" + '<meta charset="' + CoreSettings.htmlCharset + '"/>';
		
		if( style.length > 0 ){
			html += "\n\n\t" + '<style type="text/css">' + style + "\n\t" + '</style>';
		}		
		return html + "\n" + '</head>';
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

