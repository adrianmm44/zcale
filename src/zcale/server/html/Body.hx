package zcale.server.html;

class Body
{
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	private var content : String = "";
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function new(){}
		
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function add( html : String ) : Body
	{
		content += "\n\t" + html;
		return this;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function addFirst( html : String ) : Body
	{
		content = "\n\t" + html + content;
		return this;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
	
	public function toString() : String
	{
		var html = "\n" + "<body>";				
		html += content;					
		html += "\n" + "</body>";
		return html;
	}
	
	/////////////////////////////////////////////////////////////////////////////////////////////////////
}

